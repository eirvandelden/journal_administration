!!! html
%html
  %head
    %title JournalAdministration
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag 'base/_index.css', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'layout/_index.css', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'modules/_index.css', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'state/_index.css', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'theme/_index.css', media: 'all', 'data-turbolinks-track': 'reload'

    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body{ class: body_class }
    %nav.main-nav
      %ul
        %li= link_to 'Home', dashboard_index_path
        %li= link_to 'Journal', transactions_path
        %li= link_to 'Accounts', accounts_path
        %li= link_to 'Categories', categories_path
        %li.login
          - if signed_in?
            Signed in as: #{current_user.email} #{link_to 'Sign out', sign_out_path, method: :delete}
          - else
            = link_to ' Sign in', sign_in_path
    %main
      #flash
        - flash.each do |key, value|
          %div{class: "flash #{key}"}= value
      = yield
