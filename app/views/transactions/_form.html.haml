= form_for @transaction do |f|
  - if @transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - @transaction.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :id
    = f.text_field :id
  .field
    %strong TODO
    = f.label :debitor
    = f.text_field :debitor, disabled: :disabled
  .field
    %strong TODO
    = f.label :creditor
    = f.text_field :creditor, disabled: :disabled
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :booked_at
    = f.datetime_select :booked_at
  .field
    = f.label :interest_at
    = f.datetime_select :interest_at
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :note
    = f.text_area :note
  .field
    = f.label :type
    = f.text_field :type
  .actions
    = f.submit 'Save'
