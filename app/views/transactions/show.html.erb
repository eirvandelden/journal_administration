<% content_for(:secondary_nav) do %>
  <nav class="secondary">
    <ul>
      <li><%= link_to 'All transactions', transactions_path %></li>
      <li><%= link_to 'Consolidatable', transactions_path(filter: :no_category) %></li>
    </ul>
  </nav>
<% end %>

<h1>
  <%= "#{@transaction.creditor} ➡️ #{@transaction.debitor}" %>
  <%= link_to edit_transaction_path(@transaction) do %>
    <b>Edit</b>
  <% end %>
</h1>

<%= render partial: 'form', locals: { disabled: :disabled } %>

<h2>Mutations</h2>

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @transaction.mutations.each do |mutation| %>
      <tr>
        <td><%= link_to mutation.account, account_path(mutation.account) %></td>
        <td><%= number_to_currency mutation.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
