<h1><%= t(".title") %></h1>

<section>
  <h2><%= t(".summary") %></h2>
  <dl>
    <dt><%= t(".total_users") %></dt>
    <dd><%= @total_users %></dd>

    <dt><%= t(".admin_users") %></dt>
    <dd><%= @admin_users %></dd>
  </dl>
</section>

<section>
  <h2><%= t(".recent_signups") %></h2>

  <table>
    <thead>
      <tr>
        <th><%= t(".name") %></th>
        <th><%= t(".email") %></th>
        <th><%= t(".role") %></th>
        <th><%= t(".created_at") %></th>
        <th><%= t(".actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email_address %></td>
          <td><%= user.role %></td>
          <td><%= l(user.created_at, format: :long) %></td>
          <td>
            <%= link_to t(".view"), admin_user_path(user) %>
            <%= link_to t(".edit"), edit_admin_user_path(user) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
