%h1 Listing accounts

%section.actions
  = link_to 'New Account', new_account_path

%table.accounts
  %thead
    %tr
      %th Id
      %th Account number
      %th Name
      %th Owner
      %th Category
      %th
      %th
      %th

  %tbody
    - @accounts.each do |account|
      %tr
        %td= account.id
        %td= account.account_number
        %td= account.name
        %td= account.owner
        %td= account.category&.name
        %td= link_to 'Show', account
        %td= link_to 'Edit', edit_account_path(account)
        %td= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }
